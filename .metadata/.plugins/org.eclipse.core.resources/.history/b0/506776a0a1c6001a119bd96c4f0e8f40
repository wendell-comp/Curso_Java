<!DOCTYPE html>
<html>

<body>
     <!-- PRIMEIRO PROGRAMA  -->
     
     	<form action="" method="get" onsubmit="return validarDados()? true : false">
     	
     	<table style= "background:#808080 ;">
     		<tr>
     			<td> <label> Nome:</label> </td>
     			<td> <input type="text" id="nome" name="nome"  style="border-radius:5px;"></td>
     			
     		</tr>
     		
     		<tr>
     			<td><label>Login:</label> </td>
     			<td><input type="text" id="login" name="login"  style="border-radius:5px;"> </td>
     		</tr>	
     		
     		<tr>
     		    <td><label>Senha:</label> </td>
     			<td><input type="password" id="senha" name="senha"  style="border-radius:5px;"></td>
     		</tr>
     		
     		<tr>
     			
     			<td> <input type="submit" value="Salvar"  style="width:100%; border-radius:5px;"> </td>
     		</tr>	
     	</table>		
     	
     	</form>
     	
     	
     	<script type="text/javascript">   
     	 
     	function validarDados() {
			var nome = document.getElementById("nome").value;
			var login = document.getElementById("login").value;
			var senha = document.getElementById("senha").value;
			
			if (nome == '') {
			alert('Digite um Nome !!!!');
			return false;
			}
			
			else if (login == '') {
			alert('Digite um Login !!!!');
			return false;
			}
			
			else if (senha == '') {
			alert('Digite uma Senha !!!!');
			return false;
			}
			return true;
		}
     	</script>
</body>
</html>